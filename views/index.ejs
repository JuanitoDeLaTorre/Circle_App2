<%- include('./partials/headHeader') %>
<body>
    <div class="mainContent">
        <h1>EMPLOYEE LIST</h1>
    <div class = "listEmployees">
        <% employees.forEach((employee)=> { %>
                <div class="block">
                    <h4>Employee Name: <%= employee.name %></h4>
                    <p><strong>Department: </strong><%= employee.department %></p>
                    <p><strong>Position: </strong><%= employee.position %></p>
                    <p><strong>Payment Type: </strong><%= employee.paymentType %></p>
                    <a href="http://localhost:4000/updateEmployee/<%=employee.name %>"><button >UPDATE</button></a>
                    <a href="http://localhost:4000/deleteEmployee/<%=employee.name %>"><button>DELETE</button></a>

                </div>
            <% }) %>
        </div>
    </div>
</body>